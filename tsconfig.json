{
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "bundler",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es2020",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "lib": [
      "DOM",
      "ESNext"
    ]
  },
  "include": [
    "./**/**/*"
  ]
}